<Window x:Class="UIWpf.ManageAdopters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIWpf"
        mc:Ignorable="d"
        Title="ManageAdopters" Height="450" Width="800">
    <Grid>

        <Menu Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Width="340">

            <MenuItem Header="Home">
                <Button Content="Dashboard" Click="click_Dashboard"/>
            </MenuItem>

            <MenuItem Header="Cats menu">
                <Button Content="Add Cat" Click="click_AddCat"/>
                <Button Content="Manage Cats" Click="click_ManageCats"/>
            </MenuItem>

            <MenuItem Header="Adoptions menu">
                <Button Content="Add Adoption" Click="click_AddAdoption"/>
                <Button Content="Manage Adoptions" Click="click_ManageAdoptions"/>
            </MenuItem>

        </Menu>

    </Grid>
</Window>
