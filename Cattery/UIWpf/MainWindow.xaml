<Window x:Class="UIWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,460,0" Height="39" VerticalAlignment="Top">

            <MenuItem Header="Cats menu">
                <Button Content="Add Cat" Click="click_AddCat"/>
                <Button Content="Manage Cats" Click="click_ManageCats"/>
            </MenuItem>

            <MenuItem Header="Adopters menu">
                <Button Content="Add Adopter" Click="click_AddAdopter"/>
                <Button Content="Manage Adopters" Click="click_ManageAdopters"/>
            </MenuItem>

            <MenuItem Header="Adoptions menu">
                <Button Content="Add Adoption" Click="click_AddAdoption"/>
                <Button Content="Manage Adoptions" Click="click_ManageAdoptions"/>
            </MenuItem>

        </Menu>
        <TextBlock x:Name="TxtTotalCats" TextWrapping="Wrap" Margin="97,79,305,306"/>
        <TextBlock x:Name="TxtMaleCats" HorizontalAlignment="Left" Margin="100,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="56" Width="395"/>
        <TextBlock x:Name="TxtFemaleCats" HorizontalAlignment="Left" Margin="134,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="66" Width="361"/>

        <Label Content="Total cats:" HorizontalAlignment="Left" Margin="32,79,0,0" Width="60" Height="49" VerticalAlignment="Top"/>
        <Label Content="Male cats:" HorizontalAlignment="Left" Margin="32,133,0,0" VerticalAlignment="Top" Height="51"/>
        <Label Content="Female cats:" HorizontalAlignment="Left" Margin="32,184,0,0" VerticalAlignment="Top" Height="33" Width="80"/>

    </Grid>
</Window>
