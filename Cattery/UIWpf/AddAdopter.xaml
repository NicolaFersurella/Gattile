<Window x:Class="UIWpf.AddAdopter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIWpf"
        mc:Ignorable="d"
        Title="AddAdopter" Height="450" Width="800">
    <Grid>

        <Menu Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Width="340">

            <MenuItem Header="Home">
                <Button Content="Dashboard" Click="click_Dashboard"/>
            </MenuItem>

            <MenuItem Header="Cats menu">
                <Button Content="Add Cat" Click="click_AddCat"/>
                <Button Content="Manage Cats" Click="click_ManageCats"/>
            </MenuItem>

            <MenuItem Header="Adoptions menu">
                <Button Content="Add Adoption" Click="click_AddAdoption"/>
                <Button Content="Manage Adoptions" Click="click_ManageAdoptions"/>
            </MenuItem>

        </Menu>

        <TextBox x:Name="txtFiscalCode" HorizontalAlignment="Left" Margin="104,94,0,0" TextWrapping="Wrap" Text="Fiscal code" VerticalAlignment="Top" Width="120" GotFocus="click_GotFocus" Height="25"/>
        <TextBox x:Name="txtAdopterName" HorizontalAlignment="Left" Margin="251,94,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" GotFocus="click_GotFocus" Height="25"/>
        <TextBox x:Name="txtAdopterSurname" HorizontalAlignment="Left" Margin="400,94,0,0" TextWrapping="Wrap" Text="Surname" VerticalAlignment="Top" Width="120" GotFocus="click_GotFocus" Height="25"/>
        <TextBox x:Name="txtAdopterPhoneNumber" HorizontalAlignment="Left" Margin="549,94,0,0" TextWrapping="Wrap" Text="Phone number" VerticalAlignment="Top" Width="120" GotFocus="click_GotFocus" Height="25"/>
        <TextBox x:Name="txtAdopterEmail" HorizontalAlignment="Left" Margin="104,192,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="120" GotFocus="click_GotFocus" Height="25"/>
        <TextBox x:Name="txtAdopterAddress" HorizontalAlignment="Left" Margin="251,192,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" Width="120" GotFocus="click_GotFocus" Height="25"/>
        <TextBox x:Name="txtAdopterCap" HorizontalAlignment="Left" Margin="400,192,0,0" TextWrapping="Wrap" Text="CAP" VerticalAlignment="Top" Width="120" GotFocus="click_GotFocus" Height="25"/>
        <TextBox x:Name="txtAdopterCity" HorizontalAlignment="Left" Margin="549,192,0,0" TextWrapping="Wrap" Text="City" VerticalAlignment="Top" Width="120" GotFocus="click_GotFocus" Height="25"/>

        <Button x:Name="btnAddAdopter" Content="Add" HorizontalAlignment="Center" Margin="0,285,0,0" VerticalAlignment="Top" Height="56" Width="142" Click="click_AddAdopter"/>

    </Grid>
</Window>
