<Window x:Class="UIWpf.ManageCats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIWpf"
        mc:Ignorable="d"
        Title="ManageCats" Height="450" Width="800">
    <Grid>

        <Menu Margin="0,0,460,0" Height="36" VerticalAlignment="Top">

            <MenuItem Header="Home">
                <Button Content="Dashboard" Click="click_Dashboard"/>
            </MenuItem>

            <MenuItem Header="Adopters menu">
                <Button Content="Add Adopter" Click="click_AddAdopter"/>
                <Button Content="Manage Adopters" Click="click_ManageAdopters"/>
            </MenuItem>

            <MenuItem Header="Adoptions menu">
                <Button Content="Add Adoption" Click="click_AddAdoption"/>
                <Button Content="Manage Adoptions" Click="click_ManageAdoptions"/>
            </MenuItem>

        </Menu>
        
        

    </Grid>
</Window>
